@inherits LayoutComponentBase

<RadzenLayout>
    <RadzenSidebar>
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Automations" Icon="change_circle" Click="@(() => NavigationManager.NavigateTo("/"))" />
            <RadzenPanelMenuItem Text="Clients" Icon="device_hub" Click="@(() => NavigationManager.NavigateTo("/clients"))" />
            <RadzenPanelMenuItem Text="Variables" Icon="dialpad" Click="@(() => NavigationManager.NavigateTo("/variables"))" />
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        <div style="overflow:auto;">
        @Body
        </div>
    </RadzenBody>
</RadzenLayout>

<RadzenContextMenu />
<RadzenNotification />
<RadzenDialog />
<RadzenTooltip />

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
