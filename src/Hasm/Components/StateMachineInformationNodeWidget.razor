@using Blazor.Diagrams.Components.Renderers
@using Blazor.Diagrams.Core.Models
@inject DialogService DialogService
@inherits ComponentBase
<div style="position: relative;@(Node.Selected ? "border:solid" : "border:none");">
    <pre style="margin:0px;padding:0px;">@(Information.Description ?? Information.Evaluation ?? "")</pre>
    <pre style ="margin:0px;padding:0px;"><strong>@(Information.EvaluationResult ?? "")</strong></pre>
 </div>

@code {

    [Parameter]
    public StateMachineInformationNodeModel Node { get; set; } = null!;

    protected override void OnInitialized()
    {
        base.OnInitialized();

        Information = Node.StateMachine.Informations.First(x => x.Id == Node.InformationId);
    }

    Models.Information Information = null!;
}